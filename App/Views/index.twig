{% extends 'plantilla.twig'%}
{% block body %}
<body>
    <div class="container text-center">
        <h1 style=""> Notas de estudiantes </h1>
      <a href="?Home/registrar" class="btn btn-primary">Registrar otro estudiante</a>
    </div> <br>
    <table class="table  table-striped ">
  <thead>
    <tr>
      <th scope="col">TI</th>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Nota 1</th>
      <th scope="col">Nota 2</th> 
      <th scope="col">Nota 3</th>
      <th scope="col">Promedio</th>
    </tr>
  </thead>
  <tbody>
    {% if posts %}

    {% for datos in posts %}
    <tr>
      <th scope="row"> {{datos.doc}} </th>
      <td> {{datos.nom}} </td>
      <td> {{datos.ape}} </td>
      <td {% if datos.not1 < 60 %} style="color: red; "{% endif %} > {{datos.not1}}</td>
      <td {% if datos.not2 < 60 %} style="color: red; "{% endif %} >{{datos.not2}}</td>
      <td {% if datos.not3 < 60 %} style="color: red; "{% endif %} >{{datos.not3}}</td>
      <td {% if datos.prom < 60 %} style="color: red; "{% endif %} >{{datos.prom}}</td>
    </tr>
    {% endfor %}
    {% endif %}
  </tbody>
</table>
{% endblock %}